<div class="row">
	<div class="col-md-12">
		<h1>Request Password Reset</h1>
	
        <p>Please enter your email address to reset the password:</p>
        
        {% set form = t.getWidget('yii.bootstrap.ActiveForm') %}
        {% set form = form.begin({
            "id": "form-password-reset",
            "layout": "horizontal",
            'fieldConfig': {
                'template': "{label}\n<div class=\"col-lg-3\">{input}</div>\n<div class=\"col-lg-8\">{error}</div>",
                'labelOptions': {'class': 'col-lg-1 control-label'}
            }
        }) %}
        
        	{{ t.renderWidget('mozzler.base.widgets.model.input.RenderField', {
        		'form': form,
        		'model': widget.model,
        		'attribute': "email"
        	}) }}
        		
            <div class="form-group">
                <div class="col-lg-offset-1 col-lg-11">
                	{{ html.submitButton('Reset Password', {'class': 'btn btn-primary', 'name': 'reset-password-button'}) }}
                </div>
            </div>
        
        {% set form = form.end() %}
	</div>
</div>